{
    "scopeName": "source.surealql",
    "patterns": [{"include": "#keywords"}, {"include": "#comment"}],
    "repository": {
        "comment": {
            "begin": "--",
            "end": "\\n",
            "name": "comment.block.surrealql"
        },
        "query": {
            "patterns": [
                {"include": "#keywords"}
            ]
        },
        "keywords": {
            "name": "keyword.surrealql",
            "match": "SELECT|FROM|WHERE|SPLIT|GROUP|ORDER|RAND|COLLATE|NUMERIC|ASC|DESC|LIMIT|BY|START|AT|FETCH|TIMEOUT|PARALLEL"
        }
    }
}